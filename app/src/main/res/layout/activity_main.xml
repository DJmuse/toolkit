<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1200px"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:text="@string/Label_MIUI_Settings" />

            <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView4"
                android:layout_marginTop="5dp"
                android:background="#dc484b4b" />

            <Switch
                android:id="@+id/ThemePatcher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_below="@+id/line2"
                android:layout_marginTop="50dp"
                android:checked="false"
                android:clickable="true"
                android:contextClickable="false"
                android:text="@string/Label_Theme_Patch" />

            <Switch
                android:id="@+id/ThemePatcher2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_below="@+id/ThemePatcher"
                android:layout_marginTop="90dp"
                android:checked="false"
                android:clickable="true"
                android:contextClickable="false"
                android:text="MIUI主题和谐(MIUI8模式)" />


            <Switch
                android:id="@+id/RemoveSearchBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/ThemePatcher2"
                android:layout_marginTop="20dp"
                android:checked="false"
                android:clickable="true"
                android:text="@string/Label_NO_SearchBar" />

            <Switch
                android:id="@+id/RemoveAds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/RemoveSearchBar"
                android:layout_marginTop="18dp"
                android:checked="false"
                android:text="@string/Label_NO_MIUI_AD" />

            <Switch
                android:id="@+id/NoUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/RemoveAds"
                android:layout_marginTop="20dp"
                android:checked="false"
                android:text="@string/Label_No_MIUI_Update" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/NoUpdate"
                android:layout_marginTop="30dp"
                android:text="@string/Label_Common_Settings" />

            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView5"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:background="#dc676969" />

            <Switch
                android:id="@+id/CorePatcher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/view4"
                android:layout_marginTop="10dp"
                android:checked="false"
                android:text="@string/Label_Core_Patch" />

            <Switch
                android:id="@+id/RemoveAdshosts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/CorePatcher"
                android:layout_marginTop="20dp"
                android:checked="false"
                android:text="@string/Label_NO_AD" />

            <Switch
                android:id="@+id/GoogleHosts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/RemoveAdshosts"
                android:layout_marginTop="20dp"
                android:checked="false"
                android:text="@string/Label_Google_Access" />


            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/GoogleHosts"
                android:layout_marginTop="20dp"
                android:text="@string/label_Other_Settings" />

            <View
                android:id="@+id/line5"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView6"

                android:layout_marginTop="5dp"
                android:background="#dc484b4b" />

            <Switch
                android:id="@+id/switchIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView6"
                android:layout_marginTop="25dp"
                android:checked="false"
                android:text="@string/Label_Hidden_Icon" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/switchIcon"
                android:layout_marginTop="30dp"
                android:text="@string/Label_About" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView3"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:background="#dc484b4b" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/view"
                android:layout_marginTop="10dp"
                android:text="@string/Label_MyName" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView"
                android:layout_marginTop="10dp"
                android:onClick="opneUrl"
                android:text="@string/Label_Version" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView8"
                android:layout_marginTop="10dp"
                android:onClick="opneUrl"
                android:text="@string/Label_MyBlog" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView2"
                android:layout_marginTop="10dp"
                android:text="@string/Lable_Reboot_Apply" />
        </RelativeLayout>
    </ScrollView>
</LinearLayout>