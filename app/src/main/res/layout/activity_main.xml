<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1200px"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:text="@string/Label_MIUI_Settings" />




            <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView1"
                android:layout_marginTop="10dp"
                android:background="#dc484b4b" />

            <Switch
                android:id="@+id/ThemePatcher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_below="@+id/line2"
                android:layout_marginTop="55dp"
                android:checked="false"
                android:clickable="true"
                android:contextClickable="false"
                android:text="@string/Label_Theme_Patch" />

            <TextView
                android:id="@+id/exp2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/ThemePatcher"
                android:layout_marginTop="3dp"
                android:textSize="12sp"
                android:textColor="#696666"
                android:text="支持MIUI v5 v6 v7的主题和谐 " />


            <Switch
                android:id="@+id/ThemePatcher2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_below="@+id/exp2"
                android:layout_marginTop="50dp"
                android:checked="false"
                android:visibility="gone"
                android:clickable="true"
                android:contextClickable="false"
                android:text="MIUI主题和谐(MIUI8模式一)" />

            <Switch
                android:id="@+id/ThemePatcher3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_below="@+id/ThemePatcher2"
                android:layout_marginTop="110dp"
                android:checked="false"
                android:clickable="true"
                android:contextClickable="false"
                android:text="MIUI主题和谐(MIUI8模式)" />
            <TextView
                android:id="@+id/exp8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/ThemePatcher3"
                android:layout_marginTop="3dp"
                android:textSize="12sp"
                android:textColor="#696666"
                android:text="支持MIUI8的主题和谐" />


            <Switch
                android:id="@+id/RemoveSearchBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/exp8"
                android:layout_marginTop="20dp"
                android:checked="false"
                android:clickable="true"
                android:text="@string/Label_NO_SearchBar" />
            <TextView
                android:id="@+id/exp3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/RemoveSearchBar"
                android:layout_marginTop="3dp"
                android:textSize="12sp"
                android:textColor="#696666"
                android:text="去掉下拉菜单中的搜索框" />

            <Switch
                android:id="@+id/RemoveAds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/exp3"
                android:layout_marginTop="20dp"
                android:checked="false"
                android:text="@string/Label_NO_MIUI_AD" />

            <TextView
                android:id="@+id/exp9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/RemoveAds"
                android:layout_marginTop="3dp"
                android:textSize="12sp"
                android:textColor="#696666"
                android:text="什么,屏蔽不了？我没说100%屏蔽咩" />


            <Switch
                android:id="@+id/NoUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/exp9"
                android:layout_marginTop="20dp"
                android:checked="false"
                android:text="@string/Label_No_MIUI_Update" />

            <TextView
                android:id="@+id/exp4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/NoUpdate"
                android:layout_marginTop="3dp"
                android:textSize="12sp"
                android:textColor="#696666"
                android:text="在系统更新中检测不到新版本" />

            <Switch
                android:id="@+id/NoStore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/exp4"
                android:visibility="gone"
                android:layout_marginTop="20dp"
                android:checked="false"
                android:text="屏蔽商店,音乐和视频的在线内容" />

            <Switch
                android:id="@+id/root"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/NoStore"
                android:layout_marginTop="20dp"
                android:checked="false"
                android:text="去除Root 25秒等待" />

            <TextView
                android:id="@+id/exp5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/root"
                android:layout_marginTop="3dp"
                android:textSize="12sp"
                android:textColor="#696666"
                android:text="去除root授权时的25秒等待" />


            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/exp5"
                android:layout_marginTop="30dp"
                android:text="@string/Label_Common_Settings" />


            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView5"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#dc676969" />

            <Switch
                android:id="@+id/CorePatcher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/view4"
                android:layout_marginTop="10dp"
                android:checked="false"
                android:text="@string/Label_Core_Patch" />
            <TextView
                android:id="@+id/exp6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/CorePatcher"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:textColor="#696666"
                android:text="注意：MIUI8开启后,卸载APP可能导致桌面卡死几秒" />

            <Switch
                android:id="@+id/RemoveAdshosts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/exp6"
                android:layout_marginTop="20dp"
                android:checked="false"
                android:text="@string/Label_NO_AD" />
            <TextView
                android:id="@+id/exp7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/RemoveAdshosts"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:textColor="#696666"
                android:text="Hosts去广告大法" />

            <Switch
                android:id="@+id/GoogleHosts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/exp7"
                android:layout_marginTop="15dp"
                android:checked="false"
                android:text="@string/Label_Google_Access" />


            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/GoogleHosts"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:textColor="#696666"
                android:text="不要滥用,仅含常用域名" />

            <TextView
                android:id="@+id/textView55"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView6"
                android:layout_marginTop="30dp"
                android:text="其他设置" />

            <View
                android:id="@+id/line5"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView55"
                android:layout_marginTop="5dp"
                android:background="#dc484b4b" />

            <Switch
                android:id="@+id/switchIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView6"
                android:layout_marginTop="60dp"
                android:checked="false"
                android:text="@string/Label_Hidden_Icon" />

            <TextView
                android:id="@+id/textView88"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/switchIcon"
                android:layout_marginTop="20dp"
                android:text="关于" />
            <View
                android:id="@+id/view7"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView88"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="10dp"
                android:background="#dc676969" />

            <TextView
                android:id="@+id/textView889"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/view7"
                android:layout_marginBottom="30dp"
                android:text="关于应用"
                android:onClick="openAbout"
                android:textColor="#000000" />
        </RelativeLayout>
    </ScrollView>
</LinearLayout>